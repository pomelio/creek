
<div class="rounded bg-white border-gray-200 shadow-md overflow-hidden relative hover:shadow-lg hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700">

    
    {{#is_player_card}}
    <a href="{{{url}}}">
      <img class="h-32 sm:h-48 w-full object-cover" src="{{{image_url}}}" alt="{{title}}">
      <svg class="w-10 h-10 absolute left-0 top-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="blue">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.91 11.672a.375.375 0 010 .656l-5.603 3.113a.375.375 0 01-.557-.328V8.887c0-.286.307-.466.557-.327l5.603 3.112z" />
      </svg>
    </a>
    {{/is_player_card}}
    {{#is_summary_image_card}}
      <a href="{{{url}}}">
      <img class="h-32 sm:h-48 w-full object-cover" src="{{{image_url}}}" alt="{{title}}">
      </a>
    {{/is_summary_image_card}}
    <div class="m-4">
      <div class="flex justify-between">
        <a href="{{{url}}}">
        <span class="font-bold dark:text-white">{{title}}</span>
        </a>
      </div>
      <span class="block text-gray-500 text-sm">{{description}}</span>
      <div class="flex justify-between pt-2 text-sm text-gray-900  hover:bg-gray-100 dark:text-gray-200 dark:hover:bg-gray-700">
        <a href="/profile/{{user_id}}" type="button" class="flex text-sm rounded-full focus:ring-4 focus:ring-gray-300 dark:focus:ring-gray-600" aria-expanded="false">
              <img class="w-8 h-8 rounded-full" src="{{profile.picture}}" alt="{{profile.name}}">
        </a>
        <a href="/card/{{card_id}}">
        <div class="flex items-center gap-4">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 01-.825-.242m9.345-8.334a2.126 2.126 0 00-.476-.095 48.64 48.64 0 00-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0011.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155" />
          </svg>
          {{#comments_count}}
          <span class="bg-red-100 text-red-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">{{comments_count}}</span>
          {{/comments_count}}
        </div>  
        </a>
        <span class="block text-xs">{{pub_date}}</span>
       
      </div>
      
    </div>

</div>

